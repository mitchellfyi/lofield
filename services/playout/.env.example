# Playout Service Environment Variables

# Database
DATABASE_URL="postgresql://lofield:CHANGE_ME_TO_SECURE_PASSWORD@localhost:5432/lofield_fm?schema=public"

# Stream Output Paths
STREAM_OUTPUT_PATH="/var/lofield/stream"
ARCHIVE_OUTPUT_PATH="/var/lofield/archive"

# HLS Configuration
HLS_SEGMENT_DURATION=6
HLS_LIST_SIZE=10

# Crossfade Settings (in seconds)
CROSSFADE_MUSIC_TO_MUSIC=2.0
CROSSFADE_MUSIC_TO_TALK=1.0
CROSSFADE_TALK_TO_MUSIC=0.5

# Audio Quality
AUDIO_BITRATE=128k
AUDIO_SAMPLE_RATE=48000

# Polling Interval (how often to check for new segments, in seconds)
POLL_INTERVAL=5

# Archive Retention (in days)
ARCHIVE_RETENTION_DAYS=30

# Logging
LOG_LEVEL=info

# Node Environment
NODE_ENV=development
