{
  "name": "lofield-scheduler",
  "version": "1.0.0",
  "description": "Lofield FM Scheduler Service - manages content generation and broadcast queue",
  "main": "index.ts",
  "scripts": {
    "start": "tsx index.ts",
    "dev": "tsx watch index.ts",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --check \"**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --runInBand",
    "check": "npm run lint && npm run typecheck && npm run test:ci"
  },
  "keywords": [
    "lofield",
    "scheduler",
    "radio",
    "ai"
  ],
  "author": "Lofield FM",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "dotenv": "^16.4.7",
    "openai": "^6.9.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "eslint": "^9.17.0",
    "eslint-plugin-jest": "^28.6.0",
    "globals": "^15.11.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "tsx": "^4",
    "typescript": "^5",
    "typescript-eslint": "^8.18.2"
  }
}
