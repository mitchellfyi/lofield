# Database Configuration
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
# 
# SECURITY: Replace 'CHANGE_ME_TO_SECURE_PASSWORD' with the same password 
# you set in the root .env file for POSTGRES_PASSWORD
DATABASE_URL="postgresql://lofield:CHANGE_ME_TO_SECURE_PASSWORD@localhost:5432/lofield_fm?schema=public"

# API Configuration
# Base URL for the API (used for internal requests)
NEXT_PUBLIC_API_URL="http://localhost:3000"

# Streaming Configuration
# Path to store generated audio files
AUDIO_STORAGE_PATH="/var/lofield/audio"

# Stream URLs (public-facing)
# Live stream endpoint
NEXT_PUBLIC_STREAM_URL="http://localhost:8000/live.mp3"
# Archive base URL for time-shifted playback
NEXT_PUBLIC_ARCHIVE_BASE_URL="http://localhost:8000/archive"

# Icecast streaming server configuration
# 
# SECURITY: Replace these passwords with the same secure passwords 
# you set in the root .env file for ICECAST_SOURCE_PASSWORD and ICECAST_ADMIN_PASSWORD
ICECAST_HOST="localhost"
ICECAST_PORT="8000"
ICECAST_MOUNT_POINT="/lofield"
ICECAST_SOURCE_PASSWORD="CHANGE_ME_TO_SECURE_SOURCE_PASSWORD"
ICECAST_ADMIN_PASSWORD="CHANGE_ME_TO_SECURE_ADMIN_PASSWORD"

# AI Service Configuration (for future use)
# OpenAI API key for LLM-based content generation
OPENAI_API_KEY=""

# Text-to-Speech API keys
ELEVENLABS_API_KEY=""

# Text-to-Music API keys
STABILITY_AI_API_KEY=""

# Moderation
# Enable/disable auto-moderation
AUTO_MODERATION_ENABLED="true"

# Rate Limiting
# Maximum requests per IP per hour
RATE_LIMIT_PER_HOUR="100"

# Scheduler Configuration
# How far ahead to generate content (in minutes)
SCHEDULER_BUFFER_MINUTES="45"

# Node Environment
NODE_ENV="development"
